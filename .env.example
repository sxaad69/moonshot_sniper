# ============================================================
# MOONSHOT SNIPER BOT - CONFIGURATION
# Copy this file to .env and fill in your values
# ============================================================

# ============================================================
# TRADING MODE
# ============================================================
# SIMULATION = Paper trading (no real money)
# LIVE = Real trading (use with caution!)
TRADING_MODE=SIMULATION

# Starting capital in USD
STARTING_CAPITAL=100

# ============================================================
# WALLET ADDRESSES
# Only chains with wallet addresses will be active
# Leave empty or remove line to disable a chain
# ============================================================
WALLET_SOL=your_solana_wallet_address
WALLET_BSC=your_bsc_wallet_address
WALLET_BASE=your_base_wallet_address

# ============================================================
# PRIVATE KEYS (REQUIRED FOR LIVE TRADING)
# ⚠️ NEVER commit these to git!
# ⚠️ Use a dedicated trading wallet with limited funds
# ============================================================
SOL_PRIVATE_KEY=
BSC_PRIVATE_KEY=
BASE_PRIVATE_KEY=

# ============================================================
# RPC ENDPOINTS
# Get free API keys from:
# - Helius: https://dev.helius.xyz (Solana)
# - Alchemy: https://alchemy.com (Multi-chain)
# - QuickNode: https://quicknode.com (Multi-chain)
# ============================================================
HELIUS_API_KEY=your_helius_api_key
ALCHEMY_API_KEY=your_alchemy_api_key

# ============================================================
# TELEGRAM BOT
# Create bot via @BotFather on Telegram
# Create 4 channels and add bot as admin
# Use @userinfobot or @getidsbot to get channel IDs
# ============================================================
TELEGRAM_BOT_TOKEN=your_bot_token_from_botfather

# Channel IDs (include the minus sign for groups)
TELEGRAM_MAIN_ALERTS=-1001234567890
TELEGRAM_POSITIONS=-1001234567891
TELEGRAM_REJECTIONS=-1001234567892
TELEGRAM_SYSTEM=-1001234567893

# Your Telegram user ID (for admin commands)
TELEGRAM_ADMIN_ID=123456789

# ============================================================
# OPTIONAL API KEYS
# ============================================================
# Birdeye - https://birdeye.so (Solana analytics)
BIRDEYE_API_KEY=

# ============================================================
# RISK PARAMETERS
# Adjust these based on your risk tolerance
# ============================================================
# Maximum loss per day before stopping (%)
DAILY_LOSS_LIMIT=15

# Maximum acceptable tax (%)
MAX_TAX=5

# Minimum holders required
MIN_HOLDERS=20

# Maximum single holder concentration (%)
MAX_TOP_HOLDER=20

# ============================================================
# POOL CONFIGURATION
# Must sum to 100%
# ============================================================
SAFE_POOL_PERCENT=60
HUNT_POOL_PERCENT=40
